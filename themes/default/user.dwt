<script>
	/*店铺信息商品滚动*/
	var swiper = new Swiper('.j-g-s-p-con', {
		scrollbarHide: true,
		slidesPerView: 'auto',
		centeredSlides: false,
		grabCursor: true
	});
</script>
</body>

</html>